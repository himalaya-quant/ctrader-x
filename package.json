{
    "name": "@himalaya-quant/ctrader-x",
    "version": "0.0.14",
    "description": "A typescript cTrader OpenAPI implementation",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "start": "tsc && node dist/_main.js",
        "start:example": "tsc && node dist/examples/get-symbols-list.example.js",
        "test": "rm -rf dist && vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:cov": "vitest run --coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/himalaya-quant/ctrader-x.git"
    },
    "dependencies": {
        "@reiryoku/ctrader-layer": "^2.2.0",
        "dotenv": "^17.2.4",
        "protobufjs": "^7.4.0",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@types/node": "^25.2.2",
        "@vitest/coverage-v8": "^4.0.18",
        "@vitest/ui": "^4.0.18",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    },
    "keywords": [
        "ctrader",
        "spotware",
        "himalaya-quant"
    ],
    "publishConfig": {
        "access": "public"
    },
    "author": "Caius Citiriga",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/himalaya-quant/ctrader-x/issues"
    },
    "homepage": "https://github.com/himalaya-quant/ctrader-x#readme"
}
